{
  // Reference: https://blogs.msdn.microsoft.com/typescript/2018/08/27/typescript-and-babel-7/
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // Define Emotion 'css' prop and theme types
    "types": ["@emotion/core", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@emotion/styled": ["utils/theme"]
    }
  }
}
